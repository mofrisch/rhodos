---
import { SITE } from "@config";
import "@styles/base.css";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

export interface Props {
  title?: string;
  titleImage?: string;
}

const { title = SITE.title, titleImage } = Astro.props;
---

<!doctype html>
<html lang="de-DE" class="h-full overflow-x-clip overscroll-x-none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/svg" sizes="32x32" href="/img/Flag_of_Greece.svg" />
    <link rel="icon" type="image/svg" sizes="16x16" href="/img/Flag_of_Greece.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Dies ist die Website des Restaurants Rhodos in Weiterstadt" />
    <title>{title}</title>
    <meta name="title" content={title} />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  
    <body class="min-h-screen touch-pan-y overflow-x-clip bg-white">
      <div class="flex min-h-screen max-w-[100vw] flex-col justify-between overflow-x-clip">
        <Header {titleImage} />

        <main class="relative max-w-[100vw] flex-grow overflow-x-clip break-words px-4">
          <slot />
        </main>

        <Footer />
      </div>

      <script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
    </body>
  </html>

