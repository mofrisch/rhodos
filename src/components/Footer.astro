---
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();
---

<footer class="rounded-b-lg bg-gradient-to-r from-blue-600 to-blue-50 text-sm">
  <div class="grid grid-rows-1 items-center gap-4 p-4 sm:grid-cols-3 sm:content-end">
    <!-- Adresse -->
    <div class="flex flex-col items-center sm:order-1 sm:items-start sm:text-blue-200">
      <p>Restaurant Rhodos</p>
      <p>Mainzer Straße 2, 64331 Weiterstadt</p>
      <p>Telefon: 06150-4120</p>
      <a href="mailto:info@rhodos-weiterstadt.de" class="hover:text-blue-950">E-Mail: info@rhodos-weiterstadt.de</a>
    </div>

    <!-- Öffnungszeiten -->
    <div class="flex flex-col items-center text-blue-800 sm:order-3 sm:items-end">
      <p>Öffnungszeiten:</p>
      <p>Dienstag - Freitag und Sonntag:</p><p>12:00 - 14:30 und 17:00 - 23:00</p>
      <p>Samstag: 17:00 - 23:00</p>
      <p>Montag: Ruhetag</p>
    </div>

    <!-- Copyright, Rechtliches, Socials -->
    <div class="flex flex-col items-center text-blue-800 sm:order-2">
      <div class="flex w-full flex-col items-center p-4 text-blue-800">
        <div class="grid grid-cols-2">
          <a href="/impressum" class="hover:text-blue-200">Impressum</a>

          <a href="/datenschutz" class="hover:text-blue-200">Datenschutz</a>
        </div>
      </div>

      <div class="mb-4">
        <Socials />
      </div>

      <div class="items-center">
        <span class="">&copy; {currentYear} Moritz Frisch. Alle Rechte vorbehalten.</span>
      </div>
    </div>
  </div>
</footer>
<style>
  p {
    @apply text-sm;
  }
</style>

