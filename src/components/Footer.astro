---
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();
---

<footer class="rounded-b-lg bg-gradient-to-r from-blue-600 to-blue-50 text-sm">
  <div
    class="grid grid-rows-1 items-center gap-4 p-4 lg:grid-cols-3 lg:content-end"
  >
    <!-- Adresse -->
    <div
      class="flex flex-col items-center lg:order-1 lg:items-start lg:text-blue-200"
    >
      <p>Restaurant Rhodos</p>
      <p>Mainzer Straße 2, 64331 Weiterstadt</p>
      <p>Telefon: 06150-4120</p>
      <a href="mailto:info@rhodos-weiterstadt.de" class="hover:text-blue-950"
        >E-Mail: info@rhodos-weiterstadt.de</a
      >
    </div>

    <!-- Öffnungszeiten -->
    <div
      class="flex flex-col items-center text-blue-800 lg:order-3 lg:items-end"
    >
      <p>Öffnungszeiten:</p>
      <p>Dienstag - Freitag und Sonntag:</p><p>
        12:00 - 14:30 und 17:00 - 23:00
      </p>
      <p>Samstag: 17:00 - 23:00</p>
      <p>Montag: Ruhetag</p>
    </div>

    <!-- Socials -->
    <div class="flex flex-col items-center text-blue-800 lg:order-2">
      <div class="items-center">
        <span class=""
          >&copy; {currentYear} Moritz Frisch. Alle Rechte vorbehalten.</span
        >
      </div>
      <!--
        <div>
        <Socials />
      </div>
    -->

      <div class="flex w-full flex-row items-center p-4 text-blue-800">
        <div class="items-center">
          <a href="/impressum" class="flex-1 hover:text-blue-200">Impressum</a>
          <a href="/datenschutz" class="flex-1 hover:text-blue-200"
            >Datenschutz</a
          >
        </div>
      </div>
      <div>
        <Socials />
      </div>
    </div>
  </div>
</footer>
