---
import Meal from "@components/Meal.astro";
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";
const title = "Suppen";
const data = await getCollection("meals");
const starters = data.filter(meal => meal.data.cat === "Suppen");
---

<Layout>
  <section class="w-max-6xl">
    <h1 class="m-auto py-4 text-center text-3xl">
      {title}
    </h1>
    <div class="w-full">
      <ul>
        {starters.map(meal => <li class="w-full">{meal.data.title}</li>)}
      </ul>
    </div>
  </section>
</Layout>
