---
import Meal from "@components/Meal.astro";
import SingleMenu from "@layouts/SingleMenu.astro";
import { getCollection, getEntries } from "astro:content";
const title = "Extra Beilagen";
const coll = "extra";
const entries = await getCollection(coll);
const current = "/" + coll;
---

<SingleMenu {title} {current}>
  {entries.map(meal => <Meal meal={meal} coll={coll} />)}
</SingleMenu>
